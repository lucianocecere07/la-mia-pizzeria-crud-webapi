@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav mx-2">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a id="manage" class="text-dark fs-4" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"><u>Benvenuto! @UserManager.GetUserName(User)</u></a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="btn btn-link text-dark fs-4">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="text-dark fs-4" id="register" asp-area="Identity" asp-page="/Account/Register">Registrati</a>
    </li>
    <li class="nav-item">
        <a class="text-dark fs-4" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
